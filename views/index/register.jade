  body
    .container
      h1 We help you see what others don't
      if info
        h4= info
      else
        h3 Register a test account !
      br
      form(role='form', action="/register",method="post", style='max-width: 300px;')
        .form-group
            input.form-control(type='text', name="username", placeholder='Enter Username')
        .form-group
          input.form-control(type='password', name="password", placeholder='Password')
        button.btn.btn-default(type='submit') Submit
        &nbsp;
        a(href='/')
          button.btn.btn-primary(type="button") Cancel

              
              
    style.
      @font-face {
      font-family: Sansation-Regular;
      src: url(fonts/Sansation_Regular.ttf);
      }
      @font-face {
      font-family: Sansation-Lights;
      src: url(fonts/Sansation-Light.ttf);
      }
      @font-face {
      font-family: Sansation-Bold;
      src: url(fonts/Sansation_Bold.ttf);
      }
      .main_welcome{
      padding: 8vh 50px;
      min-height: 100vh;
      /* background: url(img/banner-top-page.jpg) top center; */
      background-size: cover;
      overflow: hidden;
      }
      .main_welcome_in{
      width: 100%;
      padding: 50px;
      background: rgba(255,255,255,0.2);
      }
      .main_welcome_in img{
      max-width: 300px;
      }
      .main_welcome_in{
      text-align: center;
      } 
      .main_welcome_in h1{
      font-family: Sansation-Regular;
      font-size: 36px;
      color: black;
      }
      .main_welcome_in h3{
      font-family: Sansation-Regular;
      color: black;
      margin-bottom: 20px;
      }
      .main_welcome_in p{
      font-family: Sansation-Regular;
      }
      .main_welcome_in input[type="text"], .main_welcome_in input[type="email"]{
      height: 45px;
      font-family: Sansation-Regular;
      border-radius: 0px;
      }
      .main_welcome_in textarea{
      font-family: Sansation-Regular;
      border-radius: 0px;
      }
      .main_welcome_in button {
      font-family: Sansation-Bold;
      font-size: 20px;
      border-radius: 0px;
      background: #047699;
      border: none;
      color: white;
      }
      .main_welcome_in button{
      background: #047699 !important;
      color: white !important;
      }
      @keyframes hvr-wobble-horizontal {
      16.65% {
      transform: translateX(8px);
      }
      33.3% {
      transform: translateX(-12px);
      }
      49.95% {
      transform: translateX(4px);
      }
      66.6% {
      transform: translateX(-6px);
      }
      83.25% {
      transform: translateX(1px);
      }
      100% {
      transform: translateX(0px);
      }
      }
      .hvr-wobble-horizontal {
      backface-visibility: hidden;
      box-shadow: 0 0 1px rgba(0, 0, 0, 0);
      display: inline-block;
      transform: translateZ(0px);
      vertical-align: middle;
      }
      .hvr-wobble-horizontal:hover, .hvr-wobble-horizontal:focus, .hvr-wobble-horizontal:active {
      animation-duration: 1s;
      animation-iteration-count: 1;
      animation-name: hvr-wobble-horizontal;
      animation-timing-function: ease-in-out;
      }
      @media screen and (max-width : 1200px) {
      /* CSS FOR TABLETS ------------*/
      .main_welcome_in{
      background: rgba(255,255,255,0.6);
      }
      }
      @media screen and (max-width : 480px) {
      /* CSS FOR MOBILES ------------*/
      .main_welcome{
      padding: 10px;
      }
      .main_welcome_in{
      padding: 10px;
      }
      .main_welcome_in img{
      max-width: 100%;
      }
      .main_welcome_in h1{
      font-size: 26px;
      }
      .main_welcome_in h3{
      font-size: 20px ;
      font-family: Sansation-Lights;
      }
      }
      @media screen and (max-width : 320px) {
      /* CSS FOR SMALL OLD MOBILES ------------*/
      }
