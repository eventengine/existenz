extends ../layouts/default
block content
  body
    .container
      h2 Step 2 : Create your asset :
      hr
      form#createasset(role='form', action="/issueAsset",method="post", style='max-width: 400px;')
          h3 Create a new Company
          .form-group
            label(for='assetname') Asset name
            input#assetname.form-control(type='text', name="assetname", placeholder='Asset name')
          .form-group
            label(for='contactemail')
              | Contact Email
              span(style='color:red;') *
            input#contactemail.form-control(type='email', name="contactemail", placeholder='Enter email')
          .form-group
           label(for='divisibility') Divisibility
           select#divisibility.form-control(name='divisibility')
             option 0
             option 1
             option 2
             option 3
             option 4
             option 5
             option 6
             option 7
          .form-group
            label(for='amount')
              | Amount of total shares
              span(style='color:red;') *
            input#amount.form-control(type='number', name="amount", placeholder='Enter the Amount Here')
          .form-group
            label(for='description') Description
            textarea#description.form-control(row=5, name="description", placeholder='Enter Description Here')
          .form-group
            label(for='icon') Icon (Only .png for now)
            input#icon.form-control(type='url', name="icon", placeholder='Enter Icon url Here')
          .form-group
            label(for='iconupload') Upload an icon
            input(type='file',name='iconupload', onchange='previewFile()')
            br
            img(src='', height='200', alt='Image preview...', width='400')
            br
          .form-group
            span.text-muted
              em
                span(style='color:red;') *
                |  Indicates required field
          button.btn.btn-default(type='submit') Issue Asset
          &nbsp;
          a(href='/mycompanies')
            button.btn.btn-primary(type="button") Cancel


 
